
general {
        colors = true
        color_good = "#00FF00"
        color_degraded = "#ffff00"
        color_bad = "#ff0000"
        interval = 1
        output_format = "i3bar"
}

order += "ipv6"
order += "disk /home"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "memory"
order += "load"
order += "cpu_temperature 0"
order += "tztime local"
order += "volume master"

ipv6 {
        // fotmat_up = "%ip"
        format_down = ""
}

disk /home {
        format = "/home is %percentage_avail avail."
        low_threshold = 10
        format_below_threshold = "Warning: %percentage_avail"
        threshold_type = "percentage_free"
}

disk / {
        format = "/ is %percentage_avail avail."
        low_threshold = 10
        format_below_threshold = "Warning: %percentage_avail"
        threshold_type = "percentage_free"
}

wireless _first_ {
        format_up = "%quality @ %essid(%ip)"
        format_down = ""
        format_quality = "%03d%s"
}

ethernet _first_ {
        format_up = "%speed @ %ip"
        format_down = ""
}

battery all {
        last_full_capacity = false
        format = "%status %percentage %remaining"
        low_threshold = 20
        threshold_type = "percentage"
}

memory {
        format = "RAM is %percentage_used used"
        threshold_degraded = "10%"
        threshold_critical = "5%"
        format_degraded = "MEMORY < %available"
}

cpu_usage {
        format = "CPU usage: %usage"
        max_threshold = "75"
        format_above_threshold= "CPU usage: %usage"
}

cpu_temperature 0 {
        format = "CPU temp:  %degrees °C"
        max_threshold= "50"
        format_above_threshold= "CPU temp: %degrees °C"
        path = "/sys/class/thermal/thermal_zone0/temp"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        min_width = 53
}
